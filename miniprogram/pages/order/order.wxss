page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  font-size:14px;
  color:#888;
}

.form {
  width: 100%;
}

.wrap {
  display: flex;
  margin: 40rpx 60rpx;
}

.wrap>label {
  min-width: 200rpx;
  margin-bottom:24rpx;
}

.intro-wrap {
  flex-direction: column;
}

.wrap .intro {
  width:590rpx;
  height:200rpx;
  border:1px solid #aaa;
  padding:20rpx;
}

.order-price-wrap {
  display:flex;
  flex-wrap:wrap;
  justify-content:space-around;
  border-bottom:1px solid #d9d9d9;
  padding: 10rpx 0;
}

.order-price {
  background-color: #f0f0f0;
  font-size: 13px;
  border-radius: 8rpx;
  padding: 10rpx 30rpx;
  margin: 10rpx 10rpx; 
  width:240rpx;
  text-align:center;
}

.order-price.selected {
  background-color: #dc143c;
  color: #fff;
}

.order-confirm-wrap {
  display: flex;
  align-items:center;
  justify-content:space-between;
  height:100rpx;
  margin: 30rpx;
}

.order-sum-wrap {
  display: flex;
  align-items:center;
}

.order-sum {
  color:#dc143c;
  font-size:16px;
}

.btn-order-confirm {
  height:100rpx;
  line-height:100rpx;
  background-color:#dc143c;
  color:#fff;
  width:200rpx;
  text-align:center;
  border-radius:8rpx;
}
