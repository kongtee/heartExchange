<!--index.wxml-->
<view class="container">
  <view class="header">
    <view id="headerImgWrap" class="header-img-wrap" bindtap="enterAlbum" data-id="{{banner._id}}" data-title="{{banner.nickName || '无名'}}">
      <image class="header-img" src="{{banner.avatarUrl || '/images/banner.jpg'}}" mode="aspectFill"></image>
    </view>
    <view class="banner-container">
      <view class="banner-title">
        <text>最新·更新</text>
      </view>
      <swiper class="slide-wrap" indicator-dots autoplay circular>
        <block wx:for="{{newList}}" wx:key="{{_id}}">
          <swiper-item bindtap="enterAlbum" data-id="{{item._id}}" data-title="{{item.nickName || '无名'}}">
            <image src="{{item.avatarUrl || '/images/newlist.jpg'}}" class="slide-image" mode="aspectFill" />
          </swiper-item>
        </block>
      </swiper>
    </view>
  </view>
  <view class="main">
    <view class="catogary">
      <view class="catogary-wrap">
        <view class="split"></view>
        <text class="title">推荐导师</text>
        <view class="split"></view>
      </view>
      <view class="catogary-icon"><text>◇◇◇</text></view>
    </view>
    <view class="pic-list">
      <block wx:for="{{recommendList}}" wx:key="{{_id}}">
          <view class="zhubo-item" bindtap="enterAlbum" data-id="{{item._id}}" data-title="{{item.nickName || '无名'}}">
            <view class="zhubo-container">
              <image class="zhubo-bigpic" src="{{item.avatarUrl || '/images/mrtx.jpg'}}" mode="aspectFill" style="height: {{height}}px"></image>
            </view>
            <view class="zhubo-info">
              <view class="zhubo-icon">
                <image class="zhubo-icon-img" src="{{item.avatarUrl || '/images/mrtx.jpg'}}"></image>
              </view>
              <text class="zhubo-desc">{{item.nickName || '无名'}}</text>
            </view>
          </view>
        </block>
    </view>
  </view>

  <view class="list">
    <block wx:for="{{listData}}" wx:key="{{_id}}">
      <view class="servicer-wrap" data-id="{{item._id}}" bindtap="onOrder">
        <view class="avatar">
          <image src="{{item.avatarUrl || '/images/mrtx.jpg'}}" />
        </view>
        <view class="content">
          <view class="name-wrap">
              <view class="nickname">{{item.nickName || '无名'}}</view>
              <image class="sex" src="{{item.sex === '男' ? '/images/male.png' : '/images/female.png' }}" />
          </view>
          <view class="type">{{item.type || '无'}}</view>
          <view class="status">{{item.status || '空闲'}}</view>
        </view>
        <view class="price">¥{{item.price || 0}}</view>
      </view>
    </block>
  </view>

