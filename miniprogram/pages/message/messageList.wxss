/* pages/message/messageList.wxss */
.main {
  width: 100%;
}

.main .list {
  width: 100%;
}

.main .contact-wrap {
  background-color: #fff;
  display: flex;
  width: 100%;
  justify-content: flex-start;
  border-top: solid 1rpx rgba(0, 0, 0, 0.07);
  padding: 30rpx 0;
}

.main .avatar {
  height: 140rpx;
  width: 140rpx;
  border-radius: 10rpx;
  margin: none;
}

.main .avatar image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.main .content {
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  flex: 1;
  margin-right: 20rpx;
  justify-content: space-around;
}

.main .content .name-wrap {
  display: flex;
  justify-content: space-between;
}

.main .content .name-wrap .nickname {
  font-size: 16px;
  font-weight: bold;
}

.main .content .name-wrap .create-date {
  font-size: 14px;
  color: #888;
}

.main .content .welcome {
  font-size: 10px;
  color: #888;
  text-align:left
}
