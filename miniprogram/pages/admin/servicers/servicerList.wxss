/**index.wxss**/

page {
  background: #f8f9fb;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.list {
  width: 100%;
}

.servicer-wrap {
  background-color: #fff;
  display: flex;
  width: 100%;
  justify-content: flex-start;
  height: 140rpx;
  border-top: solid 1rpx rgba(0, 0, 0, 0.07);
  padding: 30rpx;
}

.avatar {
  height: 140rpx;
  width: 140rpx;
  border-radius: 10rpx;
  margin-right: 16rpx;
}

.avatar image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.content {
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
}

.content .name-wrap {
  display: flex;
}

.content .name-wrap .nickname {
  font-size: 14px;
  font-weight: bold;
}

.content .name-wrap .sex {
  width: 13px;
  height: 13px;
  margin: 3px;
}

.content .type {
  font-size: 12px;
  color: #888;
  margin-bottom: auto;
}

.content .status {
  font-size: 12px;
  color: #888;
}

.price {
  width: 100rpx;
  text-align: right;
  font-size: 11px;
  margin-right: 50rpx;
}

.delete {
  width: 50rpx;
  height: 50rpx;
}

.delete image {
  width: 100%;
  height: 100%;
}

.add-servicer {
  position: fixed;
  bottom: 1rem;
  width: 50px;
  height: 50px;
  border-radius: 25px;
  border-width: none;
  color: #fff;
  line-height: 50px;
  text-align: center;
  font-size: 30px;
  box-shadow: 0px 0px 5px #000;
  background-color: #409EFF;
}

.add-servicer image {
  width: 100%;
  height: 100%;
}
